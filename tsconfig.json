{
    "version": "1.5.3",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": false,
        "out": "./built/tsc.js",
        "sourceMap": true
    },
    "buildOnSave": true,
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./lib/index.ts",
        "./typings/bundle.d.ts",
        "./typings/google-apps-script/google-apps-script.base.d.ts",
        "./typings/google-apps-script/google-apps-script.forms.d.ts",
        "./typings/google-apps-script/google-apps-script.mail.d.ts",
        "./typings/google-apps-script/google-apps-script.properties.d.ts",
        "./typings/google-apps-script/google-apps-script.types.d.ts",
        "./typings/google-apps-script/google-apps-script.url-fetch.d.ts"
    ]
}
